#!/bin/bash

tlp=${HOME}/Downloads/nftmaven/top100
ds=`date "+%Y-%m-%d"`
dpath=${tlp}/${ds}
uas='Mozilla/5.0 (Windows NT 6.1; Win64; x64; rv:59.0) Gecko/20100101 Firefox/59.0'

rm -rf ${dpath}
mkdir -p $dpath

for chain in ethereum solana matic klaytn; do
   echo "** ${chain} **"
   dlfn="${dpath}/${chain}.json"
   curl -L -s -o $dlfn --request GET --url https://opensea.io/rankings?chain=${chain} -A ${uas}
done
